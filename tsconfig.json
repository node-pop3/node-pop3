{
  "compilerOptions": {
    "lib": ["es2024"],
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "es2024",
    "outDir": "dist"
  },
  "include": ["src/**/*.js", "bin/**/*.js", "test/**/*.js"],
  "exclude": ["node_modules"]
}
